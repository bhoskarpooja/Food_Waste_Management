<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food_bg"
    android:orientation="vertical"
    tools:context=".userregister">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:gravity="center_vertical"
        android:text="User Register"
        android:textSize="26sp" />


    <EditText
        android:id="@+id/student_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@drawable/input_tag"
        android:hint=" Name" />

    <EditText
        android:id="@+id/student_monumber"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_tag"
        android:layout_gravity="center"
        android:hint="Mobile Number"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/student_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_tag"
        android:layout_gravity="center"
        android:hint="Email id"
        android:layout_margin="16dp"/>
    <EditText
        android:id="@+id/student_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_tag"
        android:layout_gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_margin="16dp"/>
    <EditText
        android:id="@+id/student_address"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_tag"
        android:layout_gravity="center"
        android:hint="Address"
        android:layout_margin="16dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnregister"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_bg"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Register" />


</LinearLayout>